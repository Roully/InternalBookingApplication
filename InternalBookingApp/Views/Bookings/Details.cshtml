@{
    Layout = "_Layout";
}

@model InternalBookingApp.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Resource</dt>
        <dd class="col-sm-10">@Model.Resource?.Name</dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("f")</dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime.ToString("f")</dd>

        <dt class="col-sm-2">Booked By</dt>
        <dd class="col-sm-10">@Model.BookedBy</dd>

        <dt class="col-sm-2">Purpose</dt>
        <dd class="col-sm-10">@Model.Purpose</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
